<h1>{{user.username}}</h1>
<a href="/feed/funny/best">Navigate to Feed</a>
<br>
<a href="/profile_posts/{{user._id}}">My Posts</a>
<a href="/profile_comments/{{user._id}}">My Comments</a>

{{#each user.posts}}
<div id="pickUpLine">
  <div>{{created_at}}</div>
  <button class="upVote" id={{this._id}} score={{this.score}}>Up </button>
  <button class="downVote" id={{this._id}} score={{this.score}}>Down</button>
  <span class={{_id}}>{{score}}</span>

  <h1>
    {{content}}
  </h1>

  {{!-- Editing Post --}}

  {{#if ../isUser}}
  <a href="/post/edit/{{this._id}}">Edit my Post</a>
  {{!-- <a href="/post/delete/{{this._id}}">Delete my Post</a> --}}

  <form action="/post/delete/{{this._id}}" method="POST">
    <button type="submit">Delete my Post</button>
  </form>
  {{/if}}

</div>
{{/each}}